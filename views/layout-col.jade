html(lang='en')
	head
		title Haardvark - 
			block titlepart

		meta(name="viewport",content="width=device-width, initial-scale=1.0")
		block scripts 
			script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js')
			//script(src='/javascripts/go.js')
			script(src='/socket.io/socket.io.js')
			script(src="/javascripts/bootstrap.js")
			script(src="/mobwrite/mobwrite-client.js")
			script(src="/javascripts/paper.js")
			script
				$(document).ready(function(){
					$('.column-content').hide();
					$('.icon-chevron-down').hide();
					$('.column-menu').click(function(){
						toggleHeader(this);
						});
					$('.btn').click(function(e){
						e.preventDefault();
					});
					function toggleHeader(el){
						var id = el.id;
						$('#'+id).next().next().toggle();
						$('#'+id+ " .chevron .icon-chevron-down").toggle();
						$('#'+id+ " .chevron .icon-chevron-up").toggle();
					}
				});
		block page-scripts
		block stylesheets
			link(rel='stylesheet', href='/stylesheets/style.css')
			link(rel='stylesheet', href='/stylesheets/fonts.css')
			link(rel='stylesheet', href='/stylesheets/bootstrap.css')
			link(rel='stylesheet', href='/stylesheets/bootstrap-responsive.css')
	body 
		block header
			.navbar
				.navbar-inner
					.pull-left.brand.handwriting
						h1 
							block location
					ul(style="font-size: 2em;").breadcrumb
						a(href="/")#bread1
							img(src="/images/breadcrumbs/home.png").breadcrumbicon
						block breadcrumbs
						li.pull-right 
							block username
				
		.container-fluid
			.row-fluid
				.span2
					block column
						div
							#conversation
								input(type="text",placeholder="Start chatting!")#data
								//input(type="button",value="send")#datasend
							block members
							hr
							block duedates
								div 
									.column-menu.no-select#due-dates Due dates
										span.chevron
											i.icon-chevron-up
											i.icon-chevron-down
									a(href="#",style="margin-top: -22px").btn.btn-small.pull-right
										i.icon-plus
									
									.column-content
										| THIS IS THE CONTENT OF THE DUE DATES!
							
				.span10(style="padding-left: 50px")
					block canvas
					block content
		block footer