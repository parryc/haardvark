html(lang='en')
	head
		title Haardvark - 
			block titlepart

		meta(name="viewport",content="width=device-width, initial-scale=1.0")
		block scripts 
			script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js')
			script(src='/javascripts/go.js')
			script(src='/socket.io/socket.io.js')
			script(src="/javascripts/bootstrap.js")
			script(src="/mobwrite/mobwrite-client.js")
			script(src="/javascripts/paper.js")
			script
				$(document).ready(function(){
					$('.column-content').hide();
					$('.icon-chevron-down').hide();
					$('.column-menu').click(function(){
						toggleHeader(this);
						});
					function toggleHeader(el){
						var id = el.id;
						$('#'+id).next().next().toggle();
						$('#'+id+ " .icon-chevron-down").toggle();
						$('#'+id+ " .icon-chevron-up").toggle();
					}
				});
		block page-scripts
		block stylesheets
			link(rel='stylesheet', href='/stylesheets/style.css')
			link(rel='stylesheet', href='/stylesheets/fonts.css')
			link(rel='stylesheet', href='/stylesheets/bootstrap.css')
			link(rel='stylesheet', href='/stylesheets/bootstrap-responsive.css')
