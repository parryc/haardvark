/*
General css
*/

body 
	background #45FFFF

.rounded
		-webkit-border-radius 6px
		-moz-border-radius 6px
		border-radius 6px

.breadcrumbicon
	width: 35px
	margin-top: -12px

.center-form 
	padding-top 15px
	position fixed
	left 50%
	width 400px
	margin-left -200px
	top 200px
	border 1px solid #999

.border
	border 1px solid #999

/*
Columns for document view etc.
*/

.column-menu
	cursor pointer
	font-size 1.6em

.column-content
	margin-top 10px

.column-add
	margin-left 8px
	

.chevron
	padding-left 7px
	position relative
	top 7px

.no-select
	-webkit-touch-callout none
	-webkit-user-select none
	-khtml-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none

/*
Editor
*/

.sidebar
	width: 35px

.menu-button
	width: 15px

.canvas {
    line-height 0 /* prevent weird 5px padding under canvas elements (from Paperjs.org) */
}

.canvas.border canvas {
    border 1px solid #999
}


/*
Chat client
*/

.msg-right
	float: right
	width: 190px